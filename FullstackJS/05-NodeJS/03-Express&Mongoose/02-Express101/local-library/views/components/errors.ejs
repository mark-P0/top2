<% if (errors?.length > 0) { -%>
<section class="w-full bg-red-100 text-red-700 text-sm px-4 py-3">
  <p>Please check the following:</p>
  <ul class="list-disc list-inside">
    <% errors.forEach(error => { -%>
    <li>
      <strong><%= error -%></strong>
    </li>
    <% }) -%>
  </ul>
</section>
<% } -%>
